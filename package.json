{
  "name": "@blueagle/readify",
  "version": "0.0.2",
  "devDependencies": {
    "@types/bun": "1.1.13",
    "@types/chrome": "0.0.280",
    "@types/node": "22.9.0",
    "eslint": "^9.16.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "gcc-ts-bundler": "0.1.0",
    "prettier": "3.3.3",
    "typescript": "5.8.0-dev.20241106",
    "typescript-eslint": "8.13.1-alpha.1",
    "wxt": "^0.19.17"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "wxt",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "build:content": "bun gcc-ts-bundler --src_dir='./content-script' --entry_point='./index.ts' --js_output_file='./dist/index.js' --language_out=ES5",
    "lint": "bun --bun prettier . --write && bun --bun eslint . --fix"
  },
  "sideEffects": [],
  "type": "module"
}
