{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "paths": {
      "@/*": ["./content-script/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "content-script/*.ts",
    "content-script/**/*.ts",
    "entrypoints/*.ts",
    "eslint.config.mjs"
  ]
}
